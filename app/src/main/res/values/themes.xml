<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.KinoShip" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/bottom</item>
        <item name="colorPrimaryVariant">@color/bottom</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/bottom</item>
        <item name="colorSecondaryVariant">@color/primary</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>

        <item name="textInputStyle">@style/CustomInputStyle</item>
        <item name="toolbarStyle">@style/CustomToolbar</item>
        <item name="floatingActionButtonStyle">@style/CustomFB</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="CustomToolbar" parent="Widget.MaterialComponents.Toolbar">
        <item name="background">@color/bottom</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="CustomFB" parent="Widget.MaterialComponents.FloatingActionButton">
        <item name="android:backgroundTint">@color/blue_l</item>
        <item name="drawableTint">@color/white</item>
        <item name="rippleColor">@color/primary</item>
    </style>

    <style name="CustomInputStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="android:textColorHint">@color/primary</item>
        <item name="startIconTint">@color/color_search_selector</item>
        <item name="android:textColor">@color/blue_l</item>
        <item name="boxStrokeColor">@color/blue_l</item>
        <item name="boxStrokeWidth">1dp</item>
        <item name="endIconTint">@color/color_search_selector</item>
        <item name="strokeColor">@color/blue_l</item>
        <item name="boxCornerRadiusBottomEnd">0dp</item>
        <item name="boxCornerRadiusBottomStart">0dp</item>
        <item name="boxCornerRadiusTopEnd">0dp</item>
        <item name="boxCornerRadiusTopStart">0dp</item>
    </style>

    <style name="MyRatingBar" parent="@android:style/Widget.RatingBar">
        <item name="minHeight">15dp</item>
        <item name="maxHeight">15dp</item>
        <item name="colorControlActivated">@color/yellow</item>
        <item name="colorControlNormal">@color/white</item>
    </style>

    <style name="RoundedImaged">
        <item name="cornerSize">20%</item>
    </style>

    <style name="CustomChip" parent="Widget.MaterialComponents.Chip.Filter">
        <item name="chipBackgroundColor">@color/chip_back</item>
        <item name="android:textColor">@color/chip_text</item>
        <item name="checkedIconTint">@color/white</item>
        <item name="rippleColor">@color/blue_alpha</item>
    </style>

    <style name="Theme.KinoShip.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.KinoShip.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.KinoShip.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>