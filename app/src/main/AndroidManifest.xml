<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.kinoship">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".ui.other.MovieApp"
        android:allowBackup="true"
        android:icon="@drawable/logo"
        android:label="@string/app_name"
        android:roundIcon="@drawable/logo"
        android:supportsRtl="true"
        android:theme="@style/Theme.KinoShip">
        <activity
            android:name=".ui.other.MainActivity"
            android:label="@string/title_activity_splash"
            android:theme="@style/Theme.KinoShip.NoActionBar"/>
        <activity android:name=".ui.other.SplashActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>